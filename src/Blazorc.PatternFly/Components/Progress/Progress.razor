@inherits Blazorc.PatternFly.Components.Progress.ProgressComponent

<div aria-valuetext="@ValueText"
     aria-describedby="@InstanceId-description" 
     class="pf-c-progress @Class" 
     id="@InstanceId" 
     role="progressbar">
    <div class="pf-c-progress__description" 
         id="@InstanceId-description"
         style="@TitleStyle">@Title</div>
    <div class="pf-c-progress__status">
        <span class="pf-c-progress__measure">@OutsideValue</span>

        <span class="pf-c-progress__status-icon"
              style="@DangerIconStyle">
            <svg fill="currentColor" 
                 height="1em" 
                 width="1em" 
                 viewBox="0 0 512 512" 
                 aria-hidden="true" 
                 role="img" 
                 style="vertical-align: -0.125em;">
                <path d="M256 8C119 8 8 119 8 256s111 248 248 248 248-111 248-248S393 8 256 8zm121.6 313.1c4.7 4.7 4.7 12.3 0 17L338 377.6c-4.7 4.7-12.3 4.7-17 0L256 312l-65.1 65.6c-4.7 4.7-12.3 4.7-17 0L134.4 338c-4.7-4.7-4.7-12.3 0-17l65.6-65-65.6-65.1c-4.7-4.7-4.7-12.3 0-17l39.6-39.6c4.7-4.7 12.3-4.7 17 0l65 65.7 65.1-65.6c4.7-4.7 12.3-4.7 17 0l39.6 39.6c4.7 4.7 4.7 12.3 0 17L312 256l65.6 65.1z" transform="">
                </path>
            </svg>
        </span>

        <span class="pf-c-progress__status-icon"
              style="@SuccessIconStyle">
            <svg fill="currentColor"
                 height="1em"
                 width="1em"
                 viewBox="0 0 512 512"
                 aria-hidden="true"
                 role="img"
                 style="vertical-align: -0.125em;">
                <path d="M504 256c0 136.967-111.033 248-248 248S8 392.967 8 256 119.033 8 256 8s248 111.033 248 248zM227.314 387.314l184-184c6.248-6.248 6.248-16.379 0-22.627l-22.627-22.627c-6.248-6.249-16.379-6.249-22.628 0L216 308.118l-70.059-70.059c-6.248-6.248-16.379-6.248-22.628 0l-22.627 22.627c-6.248 6.248-6.248 16.379 0 22.627l104 104c6.249 6.249 16.379 6.249 22.628.001z" transform="">
                </path>
            </svg>
        </span>
    </div>
    <div class="pf-c-progress__bar" 
         aria-describedby="@InstanceId-description" 
         aria-valuemin="@Min" 
         aria-valuenow="@Value" 
         aria-valuemax="@Max"
         aria-valuetext="@ValueText">
        <div class="pf-c-progress__indicator" 
             style="width: @Value%;">
            <span class="pf-c-progress__measure">@InsideValue</span>
        </div>
    </div>
</div>

@functions
{

}