@inherits Blazorc.PatternFly.Components.Navigation.NavigationExpandableSectionComponent

<li class="pf-c-nav__item pf-m-expandable @GetExpandableNavItemClass()">
    <a class="pf-c-nav__link" aria-expanded="true" onclick=@(()=>Toggle())>
        @if (Content != null)
        {
            @Content
        }
        else
        {
            @Title
        }
        <span class="pf-c-nav__toggle">
            <i class="fas fa-angle-right" aria-hidden="true"></i>
        </span>
    </a>
    <section class="pf-c-nav__subnav" aria-labelledby="subnav-title1">
        <!--
        <h2 class="pf-c-nav__subnav-title pf-screen-reader" id="subnav-title1">
            Current and expanded example sub-navigation
        </h2>
        -->
        <ul class="pf-c-nav__simple-list">
            @Items
        </ul>
    </section>
</li>